$color-base = #10b6f2;

p, span {
  max-height: 100000px;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

::-webkit-input-placeholder {
  color: #b2b2b2;
}

a {
  text-decoration: none;
}

:focus {
  outline: none;
}

button, input {
  font-family: inherit;
}

main {
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

header {
  position: absolute;
  z-index: 99;
  left: 0;
  top: 0;
  width: 100%;
  height: rem(88);
  background: $color-base;
  padding: 0 rem(20);

  .opt {
    position: absolute;
    top: 0;
    color: #FFF;
    font-size: rem(32);
    height: rem(88);
    min-width: rem(88);
    line-height: rem(88);
    z-index: 2;

    &.prev {
      left: rem(20);
    }

    &.next {
      right: rem(20);
      text-align: right;
    }

    i {
      width: 50%;
      height: 100%;
      font-size: rem(40);
      text-align: left;
      line-height: rem(88);
    }

    label {
      width: 100%;

      button {
        font-size: rem(30);
        color: #FFF;
        background: none;
        border: none;

        &[disabled] {
          color: #DDD;
        }
      }
    }
  }

  .title {
    height: rem(88);
    padding: 0 rem(90);
    position: relative;
    z-index: 1;

    h1 {
      line-height: rem(88);
      font-size: rem(36);
      text-align: center;
      color: #FFF;
      ellipsis();
    }

    &.with-click {
      h1 {
        &:after {
          position: relative;
          margin-left: rem(10);
          top: rem(5);
          content: '';
          display: inline-block;
          width: 0;
          height: 0;
          border-width: rem(10);
          border-style: solid;
          border-color: #FFF transparent transparent transparent;
        }
      }
    }
  }
}

section {
  position: absolute;
  z-index: 98;
  left: 0;
  top: rem(88);
  bottom: rem(98);
  width: 100%;
  padding-bottom: rem(40);
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;

  &.disable-scroll {
    overflow: hidden;
  }
}

footer {
  position: absolute;
  z-index: 99;
  left: 0;
  bottom: 0;
  width: 100%;
  height: rem(98);
  background: $color-base;
  box-shadow: 0 0 rem(15) rem(8) rgba(#000, 0.05);
  padding: 0;
  font-size: 0;
  clearfix();
  display: table;
  table-layout: fixed;

  a {
    display: table-cell;
    text-align: center;
    // width:33.33%;
    width: 100%;
    color: #8d8d8d;

    &.active {
      color: $color-base;
    }

    i, span {
      display: inline-block;
      width: 100%;
    }

    i {
      height: rem(47);
      font-size: rem(36) !important;
    }

    span {
      height: rem(25);
      font-size: rem(20);
    }
  }

  form {
    margin: 0;
    height: rem(98);
    padding: rem(16) rem(171) rem(16) rem(20);
    box-sizing: border-box;
    position: relative;
    border-top: rem(2) solid #e6e6e6;
    background-color: #f4f5f7;

    label {
      display: block;
      height: rem(66);

      input {
        display: block;
        height: rem(66);
        box-sizing: border-box;
        border: rem(2) solid #ddd;
        border-radius: rem(8);
        font-size: rem(28);
      }

      &.submit {
        position: absolute;
        width: rem(131);
        top: rem(16);
        right: rem(20);

        button {
          height: rem(66);
          background: #10b6f2;
          border-radius: rem(8);
          color: #FFF;
          display: block;
          border: none;
          width: 100%;
          font-size: rem(28);
        }
      }
    }
  }
}

main.no-footer {
  section {
    bottom: 0;
    padding: 0;
  }

  footer {
    display: none;
  }
}

