.message-container {
  background: #EBEBEB;
}

.msg-item {
  overflow: hidden;
  list-style: none;
  background: #fff;
  border-top: 1px solid #dbdbdb;
  border-bottom: 1px solid #dbdbdb;

  li {
    box-sizing: border-box;
    padding-left: rem(20);

    a {
      position: relative;
      color: #777777;
      font-size: rem(32);
      height: rem(88);
      line-height: rem(88);
      display: block;
      border-bottom: 1px solid #dbdbdb;

      &.curr {
        color: #10b6f2;
        border-bottom: 1px solid #10b6f2;
      }

      img {
        display: inline-block;
        vertical-align: middle;

        &:first-child {
          width: rem(44);
          height: rem(40);
          margin-right: rem(27);
        }

        &:last-child {
          width: rem(16);
          height: rem(26);
          position: absolute;
          right: rem(20);
          top: rem(31);
        }
      }
    }

    &:last-child {
      a {
        border-bottom: none;
      }
    }
  }
}

.message-list {
  .item {
    background: #fff;
    list-style: none;
    padding: rem(26) rem(0) rem(26) rem(21);
    position: relative;
    font-size: 0;
  }

  .avatar {
    width: rem(75);
    height: rem(75);
    position: absolute;
    top: rem(30);
    left: rem(24);
    border-radius: 100%;

    img {
      width: 100%;
      height: 100%;
      border-radius: 100%;
    }
  }

  .line-1, .line-2 {
    color: #707070;
    font-size: 0;
  }

  .line-1 {
    margin-bottom: rem(9);
  }

  .line-2 {
    margin-bottom: rem(16);
  }

  .desc {
    margin-left: rem(96);
    border-bottom: rem(1) solid #ececec;

    .name {
      font-size: rem(28);
      color: #333333;
    }
  }

  .from {
    font-size: rem(28);
    margin-left: rem(16);

    span {
      color: #10b6f2;
    }
  }

  .content {
    font-size: rem(28);
    color: #707070;
    line-height: 1.8;
    margin-bottom: rem(7);
  }

  .time {
    color: #939393;
    font-size: rem(22);
  }
}

.msgWrap, .msginformWrap {
  background-color: #efefef;
}

.msginformWrap {
  .item {
    border-bottom: 1px solid #dbdbdb;
    padding-top: rem(30);

    p {
      text-indent: 2em;
    }
  }
}

p.time {
  text-align: right;
  padding-right: 20px;
}

.icon-return {
  left: rem(20);
}

.message-page.ng-enter {
  animation: fadeIn 0.55s both ease-in;
}

.message-page.ng-leave {
  animation: fadeOut 0.2s both ease-in;
}