.dynamics-container {
  background: #EBEBEB;
}

.dynamics {
  background: #ebebeb;
  overflow: hidden;

  .time-filter {
    font-size: rem(28);
    color: #939393;
    text-align: center;
    height: rem(87);
    line-height: rem(87);
    position: relative;
    width: 100%;
    background: #efefef;
    margin-top: rem(-20);

    span {
      padding: 0 rem(10);
      margin-bottom: rem(10);
    }

    &:before, &:after {
      content: '';
      background: #bbb;
      height: 1px;
      width: rem(79);
      position: absolute;
      top: rem(43);
      left: rem(20);
    }

    &:after {
      left: auto;
      right: rem(20);
    }
  }

  .dynamic {
    background: #fff;
    border-bottom: 1px solid #dddddd;
    list-style: none;
    margin-bottom: rem(20);
    padding: 0;

    &:first-child {
      .time-filter {
        margin-top: 0;
      }
    }

    .author-detail {
      color: #a0a0a0;
      font-size: rem(26);
      height: rem(120);
      overflow: hidden;
      line-height: rem(44);
      padding: rem(15) rem(20) rem(5) rem(120);
      position: relative;
      clearfix();

      span {
        max-width: rem(200);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .avatar-img {
        position: absolute;
        left: rem(20);
        top: rem(20);
        margin-right: rem(20);
        display: inline-block;
        background: #DDD;
        circle-img(rem(88));
      }

      .author {
        color: #333333;
        font-size: rem(32);
        height: rem(56);
        line-height: rem(56);
      }

      .time {
        height: rem(34);
        line-height: rem(34);
        color: #939393;
        font-size: 0;

        span {
          font-size: rem(24);
        }
      }
    }

    .dynamic-card {
      padding: 0 rem(20);
      margin-bottom: rem(20);

      .title {
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: rem(30);
        color: #333;
        height: rem(86);
        position: relative;
        padding: rem(20) 0;

        span {
          line-height: rem(46);
          vertical-align: top;

          &.course {
            background: rgba(#7ac315, 0.8);
          }

          &.activity {
            background: rgba(#ffb301, 0.8);
          }

          &.micro-course {
            background: rgba(#F30, 0.8);
          }

          &.type {
            color: #FFF;
            border-radius: rem(8);
            padding: 0 rem(10);
            font-size: rem(24);
          }
        }
      }

      .content {
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: rem(24);
        color: #666;
      }
    }

    .dynamic-item {
      position: relative;
      overflow: hidden;
    }

    .dynamic-status {
      position: absolute;
      width: rem(180);
      height: rem(180);
      right: rem(-40);
      top: rem(-40);
      padding-top: rem(60);
      transform: rotate(45deg);

      span {
        display: block;
        width: 100%;
        height: rem(40);
        line-height: rem(40);
        font-size: rem(20);
        color: #FFF;
        text-align: center;

        &.pending {
          background: #10b6f2;
        }

        &.finshed {
          background: #ffb301;
        }

        &.expire {
          background: #999;
        }
      }
    }

    .dynamic-cover {
      position: relative;
      width: 100%;
      padding: 0;
      height: floor(rem(750 / 16 * 9), 4);

      .cover {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 100%;
        background: #DDD url('./../images/course-cover.jpg') no-repeat;
        background-size: cover;
        &.micro-course{
          background-image: url(./../images/micro-course-cover.jpg)}

        .cover-img {
          width: 100%;
          height: 100%;
          overflow: hidden;
          position: absolute;
          z-index: 1;
          left: 0;
          top: 0;

          &:after {
            position: absolute;
            z-index: 2;
            content: '';
            display: block;
            width: 100%;
            height: 100%;
            background: rgba(#000, 0.4);
          }

          img {
            position: absolute;
            z-index: 1;
            left: 50%;
            top: 50%;
            min-width: 100%;
            transform: translate(-50%, -50%);
          }
        }

        .cover-icon {
          width: rem(120);
          height: rem(100);
          position: absolute;
          bottom: 0;
          left: 0;
          z-index: 2;
          text-align: center;

          i {
            display: block;
            font-size: rem(80);
            line-height: rem(100);
            opacity: 0.9;
            color: #FFF;
          }
        }
      }
    }

    .multi-photo {
      .multi-des {
        color: #707070;
        font-size: rem(28);
        padding: rem(10) 0;

        p {
          line-height: rem(34);
        }
      }

      .photos {
        clearfix();

        .photo {
          width: rem(194);
          height: rem(194);
          float: left;
          margin: rem(9) 0;
          overflow: hidden;
          position: relative;

          img {
            position: absolute;
            width: 100%;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
          }

          &:nth-child(3n-1) {
            margin: rem(9);
          }
        }
      }
    }
  }
}
