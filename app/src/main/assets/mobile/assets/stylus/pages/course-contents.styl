.course-content-list {
  background: #FFF;
  padding: rem(20) 0;
  font-size:0;
  width:100%;
  .list-item {
    background: #fff;
    display:inline-block;
    width: 50%;
    margin:rem(25) auto;

    &:active {
      transform: rotate(0.5deg);
    }

    .cover {
      display: block;
      position: relative;
      width: rem(320);
      height: rem(180);
      overflow: hidden;
      margin:0 auto;
      border-radius: rem(5);
      box-shadow: 0 0 1px #DBDBDB;

      img {
        position: absolute;
        min-width:100%;
        min-height:100%;
        border-radius: rem(5);
        left:50%;
        top:50%;
        transform: translate3d(-50%,-50%,0)
      }

      &.clipCover {
        img {
          width: 100%;
          height: 100%;
          max-height: 100%;
          bottom: auto;
        }
      }
    }

    .desc {
      padding: rem(15) 0 0 rem(60);
      width:rem(320);
      margin:0 auto;
      height: rem(30);
      position: relative;

      .status {
        position: absolute;
        left: 0;
        top: rem(15);
        height: rem(30);
        width: rem(56);
        font-size: rem(22);
        text-align: center;
        border-radius: rem(4);
        color: #FFF;

        &.unfinished {
          background: #bbbaba;
        }

        &.finished {
          background: #ffb301;
        }
      }

      .title {
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: rem(26);
        color: #666;
        line-height: rem(30);
        text-align: left;
      }
    }
  }
}
