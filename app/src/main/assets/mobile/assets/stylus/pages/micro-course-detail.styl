.course-content-detail, .course-content-play {
  position: relative;
  width: 100%;
  height: floor(rem(750 / 16 * 9), 4);

  video {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
  }

  .opt {
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
    right: 0;
    bottom: rem(60);

    a {
      display: block;
      width: 100%;
      height: 100%;
      padding-top: rem(120);
      color: #FFF;
      opacity: 0.7;

      &:active {
        opacity: 1;
      }

      i, span {
        display: block;
        text-align: center;
        font-size: rem(26);
        margin: 0 auto;
      }

      span {
        line-height: 2;
      }

      i {
        font-size: rem(50);
        width: rem(80);
        height: rem(80);
        line-height: rem(80);
        text-indent: rem(10);
        border-radius: 50%;
        border: 2px solid #FFF;
      }
    }
  }

  .title {
    position: absolute;
    height: rem(60);
    z-index: 2;
    bottom: 0;
    left: rem(20);
    right: rem(80);
    line-height: rem(60);
    font-size: rem(28);
    opacity: 0.9;
    color: #FFF;
    ellipsis();
  }

  .cover {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: #DDD url(./../images/course-cover.jpg) no-repeat;
    background-size:cover;

    .cover-img {
      width: 100%;
      height: 100%;
      overflow: hidden;
      position: absolute;
      z-index: 1;
      left: 0;
      top: 0;

      &:after {
        position: absolute;
        z-index: 2;
        content: '';
        display: block;
        width: 100%;
        height: 100%;
        background: rgba(#000, 0.4);
      }

      img {
        position: absolute;
        z-index: 1;
        left: 50%;
        top: 50%;
        min-width: 100%;
        transform: translate(-50%, -50%);
      }
    }

    .cover-icon {
      width: rem(80);
      height: rem(60);
      position: absolute;
      bottom: 0;
      right: 0;
      z-index: 2;
      text-align: center;

      i {
        display: block;
        font-size: rem(40);
        line-height: rem(60);
        opacity: 0.9;
        color: #FFF;
      }
    }
  }
}

.tabs-content {
  // margin: rem(20) auto;
  margin: 0 auto;
  min-height: rem(360);
  background: #FFF;

  .showFeedback {
    .feedback-empty {
      width: rem(248);
      margin: rem(80) auto rem(10);
    }

    .feedback {
      margin: 0 auto;
      width: rem(276);
      height: rem(90);
      display: block;
      box-sizing: border-box;
      border: 2px solid #11b6f2;
      text-align: center;
      background: #11b6f2;
      line-height: rem(90);
      font-size: rem(32);
      border-radius: rem(45);
      position: relative;
      top: rem(50);
      color: #FFF;

      &:active {
        background: #3f9feb;
        border-color: #3f9feb;
      }
    }

    .feedback-content {
      background: #FFF;
      width: 100%;

      .content-title {
        height: rem(90);
        box-sizing: border-box;
        padding: 0 rem(20);
        position: relative;
        font-size: rem(28);
        color: #333333;
        clearfix();

        .time {
          float: left;
          height: rem(90);
          line-height: rem(90);
          font-size: rem(24);
        }

        .level {
          float: left;
          height: rem(90);
          padding-left: rem(60);
          display: block;
          position: relative;

          .iconfont {
            position: absolute;
            left: 0;
            top: 0;
            font-size: rem(34);
            color: #3f9feb;
          }

          span {
            height: 100%;
            line-height: rem(90);
            font-size: rem(28);
            text-align: center;
            color: #FFF;

            &.simple {
              color: #77ce3f;
            }

            &.normal {
              color: #47a1f0;
            }

            &.difficult {
              color: #ff7200;
            }

            &.des {
              color: #333333;
            }
          }
        }

        .edit {
          float: right;
          color: #999;
          height: rem(90);
          line-height: rem(90);
          text-align: center;
          padding-left: rem(50);
          font-size: rem(32);

          &:before {
            padding-right: rem(10);
          }
        }
      }

      .feedback-content-title {
        font-size: rem(28);
        line-height: rem(40);
        padding-left: rem(80);
        position: relative;

        .iconfont {
          position: absolute;
          left: rem(20);
          top: 0;
          height: rem(40);
          font-size: rem(32);
          color: #3f9feb;
        }
      }

      .content-block {
        padding: rem(20) rem(20) rem(20) rem(80);

        .content {
          word-break: break-all;
          box-sizing: border-box;
          width: 100%;
          font-size: rem(28);
          line-height: 1.8;
          color: #707070;
        }
      }
    }
  }
}

.feedback-container {
  background: #FFF;
  font-size: rem(28);

  .title {
    height: rem(88);
    border-bottom: 1px solid #d9d9d9;
    box-sizing: border-box;
    padding: 0 rem(30);
    color: #44a1f0;
    line-height: rem(88);
  }

  .choose-option {
    height: rem(88);
    border-bottom: 1px solid #d9d9d9;
    box-sizing: border-box;
    padding: 0 rem(10);
    text-align: center;
    clearfix();

    span {
      width: rem(150);
      height: rem(50);
      font-size: rem(24);
      background: #FFF;
      line-height: rem(44);
      margin: rem(17) rem(25);
      text-align: center;
      border-radius: rem(25);
      box-sizing: border-box;

      &.simple {
        border: rem(2) solid #77ce3f;
        color: #5b9b30;

        &.curr {
          background: #77ce3f;
          color: #FFF;
        }
      }

      &.normal {
        border: rem(2) solid #47a1f0;
        color: #51a7f1;

        &.curr {
          background: #47a1f0;
          color: #FFF;
        }
      }

      &.difficult {
        border: rem(2) solid #ff7200;
        color: #de6300;

        &.curr {
          background: #ff7200;
          color: #FFF;
        }
      }
    }
  }

  .feedback-content-wrap {
    box-sizing: border-box;
    padding: rem(10) rem(30);

    .count {
      width: 100%;
      text-align: right;
      color: #999;
    }

    label {
      display: block;
      width: 100%;

      textarea {
        box-sizing: border-box;
        padding: rem(4);
        line-height: rem(40);
        font-size: rem(24);
        width: 100%;
        min-height: rem(300);
        color: #666;
        overflow-y: auto;
      }
    }
  }
}
