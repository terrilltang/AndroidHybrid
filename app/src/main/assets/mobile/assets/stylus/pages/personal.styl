.personal-container {
  background: #EBEBEB;
}

.set-block {
  background: #FFF;
  margin: 0 auto;
  border: 1px solid #dbdbdb;
  border-left: none;
  border-right: none;
  box-sizing: border-box;
  font-size: rem(32);
  color: #333333;
  padding-left: rem(20);

  .block {
    display: block;
    height: rem(88);
    color: #333333;
    border-bottom: 1px solid #d9d9d9;
    clearfix();

    &:last-child {
      border: none;
    }

    span {
      line-height: rem(88);
      float: left;

      &:last-child {
        float: right;
        font-size: rem(32);
        padding-right: rem(20);
      }
    }

    label {
      display: block;
      width: 100%;
      height: 100%;
      float: right;

      input {
        height: 100%;
        font-size:rem(28);
        box-sizing: border-box;
        padding: 0 rem(12);
      }
    }
  }
}

label.btn {
  display: block;
  height: rem(90);
  margin: rem(20) auto;
  border-top: 1px solid #dbdbdb;
  border-bottom: 1px solid #DBDBDB;
  background: #FFF;

  button {
    display: block;
    border: none;
    background: none;
    line-height: rem(90);
    width: 100%;
    text-align: center;
    color: #f43531;
    font-size: rem(32);
  }

  &:active {
    color: #FFF;
    background: #f43531;

    button {
      color: #FFF;
    }
  }
}

// PROFILE
.profile-block {
  background: #FFF;
  margin: 0 auto;
  border: 1px solid #DBDBDB;
  border-left: none;
  border-right: none;
  box-sizing: border-box;
  font-size: rem(32);
  color: #333;
  padding-left: rem(20);

  .block {
    height: rem(88);
    border-bottom: 1px solid #d9d9d9;
    clearfix();

    &:last-child {
      border: none;
    }

    span {
      line-height: rem(88);
      float: left;

      &.info {
        float: right;
        text-align: right;
        padding-right: rem(20);
        color: #939393;
        font-size: rem(28);
      }

      &.name {
        color: #333;

        i {
          font-size: rem(20);
          color: #939393;
        }
      }

      &.status {
        float: right;
        text-align: right;
        padding-right: rem(20);

        .iconfont {
          font-size: rem(32);
          color: #11b6f2;
        }
      }
    }
  }
}