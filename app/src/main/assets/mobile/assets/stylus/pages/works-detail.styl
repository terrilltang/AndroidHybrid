
.play-contain {
  width: 100%;
  min-height:rem(400);
  position: reltaive;
  clearfix();
  .content {
    width: 100%;
    min-height:rem(400);
    height: auto;
    position: relative;
    iframe,video{
      width: 100%;
      border: 0;
    }
    iframe{
      height:rem(480);
    }
    img{
      //height:100%;
      margin:0 auto;
      &.multi{
        max-width:100%;
        height:auto;
      }
    }
    .empty {
      position: relative;
      width: 100%;
      height: 100%;
      img {
        width: 100%;
        height: 100%;
      }
      .text {
        box-sizing: border-box;
        text-align: center;
        position: absolute;
        margin: auto;
        width: 100%;
        top: 25%;
        img {
          margin: 0 auto;
          width: rem(191);
          height: rem(125);
        }
        p {
          margin-top: 5px;
          color: #999;
          font-size: rem(30);
        }
      }
    }
  }
}
.file-container {
  width: 100%;
  box-sizing: border-box;
  background: #FFF;
  height: rem(320);
  padding: rem(60) rem(50);
  box-shadow 0 0 rem(8) #DDD;
  border-bottom:1px solid #DDD;
  position: relative;
  clearfix();
  .file-type {
    position: absolute;
    z-index: 1;
    left: rem(70);
    top: rem(90);
    width: rem(190);
    height: rem(140);
    letter-spacing: rem(2);
    line-height: rem(140);
    color: #FFF;
    text-align: center;
    font-size: rem(30);
    font-family: Arial;
    .iconfont {
      font-size: rem(40);
    }
    &.folder {
      background: url(../../images/bag.png) no-repeat center center;
      background-size: 80%;
    }
    &.jpg, &.jpeg {
      background: url(../../images/filetype/jpg.png) no-repeat center center;
      background-size: 80%;
    }
    &.bmp {
      background: url(../../images/filetype/bmp.png) no-repeat center center;
      background-size: 80%;
    }
    &.png {
      background: url(../../images/filetype/png.png) no-repeat center center;
      background-size: 80%;
    }
    &.gif {
      background: url(../../images/filetype/isgif.png) no-repeat center center;
      background-size: 80%;
    }
    &.ppt {
      background: #ff8d3b;
      &:after {
        display: inline-block;
        vertical-align: top;
        height: rem(140);
        content: 'PPT';
      }
    }
    &.word {
      background: #3cb7ff;
      &:after {
        display: inline-block;
        vertical-align: top;
        height: rem(140);
        content: 'WORD';
      }
    }
    &.excel {
      background: #02d03d;
      &:after {
        display: inline-block;
        vertical-align: top;
        height: rem(140);
        content: 'EXCEL';
      }
    }
    &.pdf {
      background: #fe554c;
      &:after {
        display: inline-block;
        vertical-align: top;
        height: rem(140);
        content: 'PDF';
      }
    }
  }
  .file-des {
    position: absolute;
    height: rem(140);
    left: 0;
    right: 0;
    top: rem(90);
    box-sizing: border-box;
    padding: 0 rem(70) 0 rem(290);
    font-size: rem(28);
    width: 100%;
    .title {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      line-height: rem(44);
      text-overflow: ellipsis;
      max-height: rem(88);
      overflow: hidden;
    }
    .download {
      position: absolute;
      left: rem(290);
      bottom: 0;
      width: rem(164);
      height: rem(52);
      background: #10b6f2;
      font-size: rem(24);
      color: #FFF;
      line-height: rem(52);
      display: block;
      text-align: center;
      border-radius: rem(10);
      &.disabled {
        background: #b7b7b7;
      }
    }
  }
}



.play-author {
  height: rem(118);
  background: #FFF;
  position: relative;
  border-bottom: 1px solid #e0e0e0;
  box-sizing: border-box;
  padding: rem(25) rem(120) rem(25) rem(20);
  clearfix();
  .author-info {
    width: 100%;
    height: rem(68);
    margin: 0;
    clearfix();
    .avatar {
      float: left;
      width: rem(54);
      height: rem(54);
      border: 1px solid #f5f5f8;
      border-radius: 100%;
      img {
        width: rem(54);
        height: rem(54);
        border-radius: 100%;
      }
    }
    .info {
      float: left;
      height: rem(68);
      padding-left: rem(18);
      span {
        display: block;
        font-size: rem(29);

        &.name {
          padding-top: rem(2);
          line-height: 1;
          font-size: rem(28);
          color: #222;
        }
        &.time {
          line-height: 1;
          font-size: rem(20);
          padding-top: rem(8)
          color: #999999
        }
      }
    }
  }
  .dig {
    width: rem(68);
    height: rem(68);
    position: absolute;
    right: rem(40);
    top: rem(25);
    span {
      display: block;
      text-align: center;
      color: #999;
      &.iconfont {
        height: rem(34);
        font-size: rem(28);
      }
      &.txt {
        height: rem(28);
        line-height: rem(28);
        font-size: rem(20);
      }
    }
    &.had {
      span {
        color: #ff3939;
      }
    }
  }
}
